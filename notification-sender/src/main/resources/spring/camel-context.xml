<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:camel="http://camel.apache.org/schema/spring"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
    http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

  <bean id="processNotificationRequestRouteBuilder" class="se.inera.webcert.notifications.routes.ProcessNotificationRequestRouteBuilder"/>

  <bean id="customObjectMapper" class="se.inera.certificate.integration.json.CustomObjectMapper"/>

  <bean id="notificationMessageDataFormat" class="org.apache.camel.component.jackson.JacksonDataFormat">
    <constructor-arg ref="customObjectMapper"/>
    <constructor-arg value="se.inera.certificate.modules.support.api.notification.NotificationMessage"/>
  </bean>

  <bean id="jaxbMessageDataFormat" class="org.apache.camel.converter.jaxb.JaxbDataFormat">
    <constructor-arg value="se.riv.clinicalprocess.healthcond.certificate.certificatestatusupdateforcareresponder.v1"/>
    <property name="partClass" value="se.riv.clinicalprocess.healthcond.certificate.certificatestatusupdateforcareresponder.v1.CertificateStatusUpdateForCareType"/>
    <property name="partNamespace">
      <bean class="javax.xml.namespace.QName">
        <constructor-arg value="urn:riv:clinicalprocess:healthcond:certificate:CertificateStatusUpdateForCareResponder:1"/>
        <constructor-arg value="CertificateStatusUpdateForCare"/>
      </bean>
    </property>
  </bean>

  <camel:camelContext id="webcertNotification">

    <camel:routeBuilder ref="processNotificationRequestRouteBuilder"/>

    <!-- Endpoint connected to AMQ to recieve messages on -->
    <camel:endpoint id="receiveNotificationRequestEndpoint" uri="${receiveNotificationRequestEndpointUri}"/>

    <!-- Outgoing endpoint to CertificateStatusUpdateForCare service -->
    <camel:endpoint id="sendCertificateStatusUpdateEndpoint" uri="${sendCertificateStatusUpdateEndpointUri}"/>

    <!-- Endpoint for transformed messages, ready to be sent to WS  -->
    <camel:endpoint id="sendNotificationWSEndpoint" uri="${sendNotificationWSEndpointUri}"/>

    <camel:endpoint id="deadLetterEndpoint" uri="${deadLetterEndpointUri}"/>

    <camel:dataFormats>
      <camel:jaxb id="notificationRequestJaxb" contextPath="se.inera.webcert.notifications.message.v1"/>
    </camel:dataFormats>

  </camel:camelContext>

</beans>
